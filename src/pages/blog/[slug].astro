---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('pages', ({ id )} => id.startsWith('blog/'));
  return posts.map((post) => ({
    params: { slug: post.id.replace('blog/', '').replace('.md', '') },
    props: { post },
  )});
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <article class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen p-8 rounded-lg shadow-lg max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-gray-800 mb-4">{post.data.title}</h1>
    {post.data.date && ( <time class="text-gray-600 mb-4 block text-lg">{new Date(post.data.date).toLocaleDateString()}</time>}
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
    <a href="/blog/" class="mt-8 inline-block bg-indigo-600 text-white px-6 py-3 rounded-md hover:bg-indigo-700 transition-colors duration-200 font-medium">Back to PC Fixer Blog</a>
  </article>
</Layout>