---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const about = await getEntry('pages', 'about');
if (!about) throw new Error('About page not found');
const { Content } = await about.render();
---

<Layout title={about.data.title}>
  <div class="min-h-screen bg-gradient-to-br from-blue-500 to-purple-700 flex items-center justify-center py-12 px-4">
    <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-2xl p-8">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">{about.data.title}</h1>
        {about.data.description && <p class="text-lg text-gray-600">{about.data.description}</p>}
      </div>
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>
    </div>
  </div>
</Layout>